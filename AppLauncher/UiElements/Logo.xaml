                            <DataTrigger Binding="{Binding Logo.PathsData.Count, FallbackValue=0}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
